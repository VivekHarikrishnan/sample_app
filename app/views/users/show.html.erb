<% provide :title, @user.name %>
<aside class="row">
	<div class="span4">

			<section>
				<h1>
					<%= gravatar_for @user %>
					<%= @user.name %>
				</h1>
			</section>
	</div>
		<div class="span8">
			<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
			<% end %>
		</div>

</aside>